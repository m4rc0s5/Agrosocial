<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/white"
    tools:context=".CadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="68dp"
                android:onClick="tirarfoto"
                app:srcCompat="@drawable/ic_icone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/algerian_regular"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="36sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/Nometitle"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nome" />


        <EditText
            android:id="@+id/Nomebarra"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="text"
            android:text=" " />


        <TextView
            android:id="@+id/emailtitle"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email" />

        <EditText
            android:id="@+id/emailbarra"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="textEmailAddress" />


        <TextView
            android:id="@+id/SenhaTitle"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Senha" />

        <EditText
            android:id="@+id/Senhabarra"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="numberPassword" />


        <TextView
            android:id="@+id/Telefone_title"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Telefone" />

        <EditText
            android:id="@+id/tel_barra"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:inputType="phone" />


        <Button
            android:id="@+id/Salvar1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="salvar1click"
            android:text="Salvar"
            app:backgroundTint="#FFC107" />

    </LinearLayout>

</ScrollView>