<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".CadastroActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"

        android:onClick="tirarfoto"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/Nometitle"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nome" />


    <EditText
        android:id="@+id/Nomebarra"
        android:layout_width="200dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=" " />


    <TextView
        android:id="@+id/emailtitle"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email" />

    <EditText
        android:id="@+id/emailbarra"
        android:layout_width="200dp"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/SenhaTitle"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Senha" />

    <EditText
        android:id="@+id/Senhabarra"
        android:layout_width="200dp"
        android:inputType="numberPassword"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/Telefone_title"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Telefone" />

    <EditText
        android:id="@+id/tel_barra"
        android:layout_width="200dp"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" />


    <Button
        android:id="@+id/Salvar1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="salvar1click"
        android:text="Salvar"

        app:backgroundTint="#FFC107" />


</LinearLayout>